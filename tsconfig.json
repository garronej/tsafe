{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "lib": ["es2015", "DOM", "ES2019.Object"],
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "incremental": true,
        "strict": true,
        "downlevelIteration": true,
        "noFallthroughCasesInSwitch": true,
        // Will be overwritten, only for dev
        "module": "CommonJS"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist/", "deno_dist/", "src/**/*.deno.ts", "src/**/*.deno.tsx"]
}
